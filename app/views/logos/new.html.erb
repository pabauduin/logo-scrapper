<div class="card">

    <div style="margin-bottom:15px;"><h1>👩‍💻 Logo scrapper</h1></div>

    <div style="display:flex; flex-direction: row; margin: 10px 0 10px 0">
      <%= link_to "All logos", logos_path, style: "margin-right:20px;" %>
      <%= link_to "New logo request", new_logo_path %>
    </div>

  <hr>

  <%= form_tag({:controller => "logos", :action => "generate_logos"}, :method => "post") do %>

    <div class="field">
      <p>Add company names, separated with a comma. Requesting logos will destroy previous ones.</p>
      <%= text_field_tag(:companies, nil, placeholder: "List of companies") %><br>
    </div>

    <br>

    <div class="actions">
      <%= submit_tag("🔎 Request logos", class: "action-button-send") %>
    </div>

  <% end %>

</div>
