<div class="card">
	<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom:15px;flex-wrap: wrap;">
		<div><h1>👩‍💻 Logo scrapper</h1></div>

		<% if Logo.all.count > 0 %>
			<div style="display:flex; flex-direction: row;">
				<%= button_to "💾 Save all", Cloudinary::Utils.download_folder("Logos", options = {}),style: "margin-right:10px;", class: "action-button" %><br>
				<%= button_to "🗑 Destroy all", destroy_all_logos_path, class: "action-button action-button-destroy" %>
			</div>
		<% end %>

	</div>

	<div style="display:flex; flex-direction: row; margin: 10px 0 10px 0">
		<%= link_to "All logos", logos_path, style: "margin-right:20px;" %>
		<%= link_to "New logo request", new_logo_path %>
	</div>

	<hr>

	<% if Logo.all.count == 0 %>
		<p>Nothing was found on your previous request, <div style="padding-top:3px;">OR you have not <%= link_to "requested", new_logo_path %> any logo.</p>
	<% end %>

	<% @logos.each { |logo| %>
		<div style="display:flex; align-items:center; justify-content: space-between; ">
			<% if !logo.name.nil? %>
				<div style="display:flex; align-items: center;">
					<div><%= link_to cl_image_tag("Logos/#{logo.name}.png", style: "border-radius:50%; height:50px; margin-right:15px; width:50px; object-fit:contain; background-color:white; border: 2px solid #363e47;"), cl_image_path("Logos/netflix.png") %></div>
					<div><%= logo.name %>.png</div>
				</div>
				<div><%= link_to "Destroy", logo, id: logo.id, method: :delete, style: "color: #f55" %></div>
			<% end %>	
		</div>
		<hr>
	<% } %> 
	
</div>